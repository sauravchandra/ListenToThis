<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:gravity="center">

    <TextView
        android:id="@+id/activity_setup_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="40sp"
        android:text="@string/setup_text_1"
        android:textColor="@color/white"
        android:padding="10dp"
        android:textAlignment="center"
        android:layout_gravity="center"
        android:gravity="center_horizontal"/>

    <EditText
        android:id="@+id/activity_setup_user_name"
        android:layout_marginTop="40dp"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:backgroundTint="@color/white"
        android:textSize="40sp"
        android:textColorLink="@null"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:visibility="gone"/>

    <view
        android:layout_alignBottom="@id/activity_setup_text"
        android:id="@+id/activity_setup_button"
        class="mbanje.kurt.fabbutton.FabButton"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:clickable="true"
        android:color="@color/colorPrimary"
        android:focusable="true"
        android:indeterminate="true"
        android:max="100"
        android:src="@drawable/forward"
        app:fbb_progressColor="@color/white"
        app:fbb_progressWidthRatio="0.1"
        app:fbb_showEndBitmap="false"
        app:fbb_showShadow="true"
        android:visibility="gone"/>

</LinearLayout>